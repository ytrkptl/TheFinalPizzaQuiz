<?xml version="1.0" encoding="utf-8"?>

<!--
I found ideas for making rounded buttons from stack overflow on the following link:
https://stackoverflow.com/questions/6054562/how-to-make-the-corners-of-a-button-round
-->


<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#FF0000" />
            <gradient android:angle="-90" android:endColor="#FF0000" android:startColor="#FF0000" />
        </shape>
    </item>


    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#FF0000" />
            <solid android:color="#FF0000" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <stroke android:width="3dp" android:color="#FF0000" />
            <gradient android:angle="-90" android:endColor="#FF0000" android:startColor="#FF0000" />
        </shape>
    </item>
</selector>